{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "ignoreDeprecations": "5.0",
    "importsNotUsedAsValues": "remove",
    "noImplicitAny": false,
    "allowJs": true,
    "target": "es2016",
    "lib": [
        "es2021",
        "dom",
        "scripthost"
    ],
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
